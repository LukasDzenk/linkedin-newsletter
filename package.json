{
    "name": "backend-fastify-template",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "author": "Lukas Dzenkauskas",
    "license": "UNLICENSED",
    "keywords": [],
    "type": "module",
    "packageManager": "pnpm@9.12.0",
    "scripts": {
        "prepare": "husky",
        "dev": "NODE_ENV=development APP_ENV=development NODE_OPTIONS='--max-old-space-size=2048' tsx watch ./src/index.ts",
        "staging": "NODE_ENV=production APP_ENV=staging NODE_OPTIONS='--max-old-space-size=2048' node ./dist/index.js",
        "start": "NODE_ENV=production APP_ENV=production NODE_OPTIONS='--max-old-space-size=2048' node ./dist/index.js",
        "format:check": "prettier --log-level warn --check ./",
        "format": "prettier --log-level warn --write ./",
        "lint": "eslint .",
        "lint:quiet": "eslint --quiet .",
        "lint:fix": "eslint --fix .",
        "type:check": "tsc --noEmit",
        "test": "NODE_ENV=production APP_ENV=test vitest run --pool forks --poolOptions.forks.singleFork",
        "test:watch": "NODE_ENV=production APP_ENV=test vitest --pool forks --poolOptions.forks.singleFork",
        "test:coverage": "NODE_ENV=production APP_ENV=test vitest run --coverage",
        "build": "tsc ; tsc-alias",
        "build:force": "tsc --noEmit false --noEmitOnError false && tsc-alias",
        "check": "pnpm type:check && pnpm lint:fix && pnpm test && pnpm format"
    },
    "dependencies": {
        "@fastify/autoload": "^6.0.2",
        "@fastify/cors": "^10.0.1",
        "@fastify/formbody": "^8.0.1",
        "@fastify/helmet": "^12.0.1",
        "@fastify/rate-limit": "^10.1.1",
        "@fastify/static": "^8.0.1",
        "@fastify/swagger": "^9.2.0",
        "@fastify/swagger-ui": "^5.1.0",
        "@fastify/under-pressure": "^9.0.1",
        "@slack/web-api": "^7.6.0",
        "bottleneck": "^2.19.5",
        "dotenv": "^16.4.5",
        "fastify": "^5.0.0",
        "fastify-plugin": "^5.0.1",
        "http-status-codes": "^2.3.0",
        "ioredis": "^5.5.0",
        "openai": "^4.86.1",
        "pino": "^9.5.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@eslint/js": "^9.12.0",
        "@types/node": "^22.7.5",
        "chalk": "^5.3.0",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "globals": "^15.11.0",
        "husky": "^9.1.6",
        "pino-pretty": "^11.3.0",
        "prettier": "^3.3.3",
        "tsc-alias": "^1.8.10",
        "tsx": "^4.19.1",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.9.0",
        "vitest": "^2.1.3"
    }
}
